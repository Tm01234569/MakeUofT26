PORT=8787

# Shared key expected from ESP32 headers:
# x-api-key: <MEMORY_API_KEY>
# Authorization: Bearer <MEMORY_API_KEY>
MEMORY_API_KEY=replace-me

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority
MONGODB_DB=makeuoft26
MONGODB_COLLECTION=memory_events

# Atlas Vector Search index name on the collection
ATLAS_VECTOR_INDEX=memory_vector_index

# Embeddings (Gemini) - optional but recommended for vector search
GEMINI_API_KEY=
GEMINI_ASR_MODEL=gemini-2.0-flash
GEMINI_LLM_MODEL=gemini-2.0-flash
GEMINI_EMBEDDING_MODEL=models/gemini-embedding-001
# Keep this in sync with your Atlas vector index numDimensions.
GEMINI_EMBEDDING_DIM=768

# ElevenLabs (used by /v1/tts/synthesize)
ELEVENLABS_API_KEY=
ELEVENLABS_TTS_MODEL=eleven_flash_v2_5

# Optional global timeout for upstream API calls
FETCH_TIMEOUT_MS=30000
